---
import ClipboardCopy from './ClipboardCopy.astro';
import BirdsVector from './BirdsVector.astro';
---

<div id="get-in-touch">
	<div class="wrapper">
		<div class="repel region">
			<div class="flow">
				<p
					class="text-step-000 leading-snug tracking-wider uppercase font-medium"
				>
					Get in touch
				</p>
				<a
					class="block heading-1 text-color-2 flow-space-2xs"
					href="mailto:hello@arpit.codes"
				>
					hello@arpit.codes
				</a>
				<div class="flow-space-xs">
					<ClipboardCopy />
				</div>
			</div>
			<BirdsVector />
		</div>
	</div>
</div>
