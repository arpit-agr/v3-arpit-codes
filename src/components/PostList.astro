---
import FormattedDate from '../components/FormattedDate.astro';

interface Post {
	slug: string;
	data: {
		title: string;
		pubDate: Date;
		draft: boolean;
	};
}

const {postsCollection} = Astro.props;
---

<div class="post-list-wrapper flow">
	<slot />
	<ul class="post-list flow flow-space-l" role="list">
		{
			postsCollection.map((post: Post) => (
				<li class="post-entry grid">
					<a href={`/blog/${post.slug}`} {...(post.data.draft && {'data-draft': true})}>
						{post.data.title}
					</a>
					<FormattedDate date={post.data.pubDate} />
				</li>
			))
		}
	</ul>
</div>
