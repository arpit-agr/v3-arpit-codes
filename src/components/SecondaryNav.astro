---
const secondaryNavItems = [
	{
		description:
			'A questionnaire designed to help me understand your requirements, ensuring a smooth and tailored process.',
		linkLabel: 'Project Questionnaire',
		linkURL: '/questionnaire/'
	},
	{
		description:
			'Explore a compilation of principles crafted by experts that shape my approach to web design and development.',
		linkLabel: 'Design Principles',
		linkURL: '/design-principles/'
	}
];
---

<div id="secondary-nav" tabindex="-1">
	<div class="wrapper">
		<div class="flow region">
			<h2 class="heading-3 leading-flat">More on This Site</h2>
			<nav class="flow-space-l" aria-label="Secondary">
				<dl class="grid" data-layout="halves">
					{
						secondaryNavItems.map(item => {
							return (
								<div class="flow relative">
									<dt class="leading-flat">
										<a class="font-medium text-color-2" href={item.linkURL}>
											{item.linkLabel}
										</a>
									</dt>
									<dd class="flow-space-2xs">{item.description}</dd>
								</div>
							);
						})
					}
				</dl>
			</nav>
		</div>
	</div>
</div>
