---
interface Props {
	postTags: string[];
}

const {postTags} = Astro.props;
---

<p class="post-tag-list cluster small-text leading-snug">
	Tagged:
	{
		postTags.map(tag => (
			<a href={`/tags/${tag}/`} rel="tag">
				{tag}
			</a>
		))
	}
</p>

<style>
	p {
		--gutter: var(--space-3xs) var(--space-2xs);
	}
</style>
